{
  "name": "@daikolabs/prettier-config",
  "version": "1.0.0",
  "description": "Daiko Labs shared Prettier configuration",
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node -e \"require('node:fs').rmSync('dist',{recursive:true,force:true})\" && tsdown -p tsconfig.json && tsc -p tsconfig.json --emitDeclarationOnly --outDir dist",
    "prepublishOnly": "npm run build",
    "release": "semantic-release"
  },
  "dependencies": {
    "@prettier/plugin-oxc": "0.1.0",
    "prettier-plugin-organize-imports": "4.3.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.0",
    "@semantic-release/npm": "^12.0.1",
    "prettier": "^3.0.0",
    "semantic-release": "^24.2.0",
    "tsdown": "^0.18.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "prettier": ">=3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/DaikoAI/prettier-config.git"
  },
  "main": "./dist/index.js"
}
