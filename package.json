{
  "name": "@daikolabs/prettier-config",
  "version": "1.0.0",
  "description": "Daiko Labs shared Prettier configuration",
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node -e \"require('node:fs').rmSync('dist',{recursive:true,force:true})\" && tsdown -p tsconfig.json && tsc -p tsconfig.json --emitDeclarationOnly --outDir dist",
    "prepublishOnly": "npm run build",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "npm run build && changeset publish"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@changesets/cli": "^2.27.0",
    "prettier": "^3.0.0",
    "tsdown": "^0.18.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "prettier": ">=3.0.0",
    "prettier-plugin-organize-imports": ">=0",
    "@prettier/plugin-oxc": ">=0"
  },
  "main": "./dist/index.js"
}
